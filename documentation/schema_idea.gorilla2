@import rendezvous.gorilla

dejavu (font) {
	image: "dejavu.png";
	lineheight: 22px;
	spacelength: 6px;
	baseline: 18px;
	kerning: -0.5px;
	native-size: 12pt;

	space (glyph) {
		advance: 3px;
	}

	0x35 (glyph) {
		region: 0,0, 4,14;
		advance: 4px;
	}

	"A" (glyph) {
		region: 32,32, 13,14;
		advance: 12px;
	}
}

cursor (sprite) {
	image: "sprites.png";
	region: 0,0, 16,16;
	animated: true;
	loop: true;
	frames: 3;
	direction: down;
	timing: 0.15s, frame-length, 0.35s; 
}
